<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:background="@color/purple_500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_clear_24"
                android:id="@+id/imageviewclearmod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageView>
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/imageviewclearmod"
                android:layout_centerVertical="true"
                android:id="@+id/textviewappname"
                android:textColor="@color/white"
                android:text="Cars"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <CheckBox
                android:visibility="invisible"
                android:id="@+id/checkbox1"
                android:textColor="@color/white"
                android:text="пометить все"
                android:layout_centerVertical="true"
                android:layout_marginLeft="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></CheckBox>

            <RelativeLayout
                android:visibility="invisible"
                android:id="@+id/relativelayfordelete"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="40dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/baseline_delete_24"
                    android:id="@+id/imageviewdelete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"></ImageView>
                <TextView
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:background="@drawable/baseline_lens_24"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/textviewdeletecounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativlayoutbadge"
                android:layout_marginLeft="280dp"
                android:layout_centerVertical="true"
                android:layout_width="40dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="90dp"
                    android:id="@+id/imageviewshop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_shopping_cart_24"></ImageView>
                <TextView
                    android:id="@+id/textviewshopcounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/baseline_lens_24"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"></TextView>
            </RelativeLayout>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>



</LinearLayout>